// Comment
// 	_id
// 	userID
// 	userPic
// 	recipeId
// 	comment string

const commentSchema =  new mongoose.Schema({
    comment :{
        type :String,
        require:true,
        trim:true
    },
    recipeId:{
        type:mongoose.Schema.ObjectId,
        ref: 'recipes',
        required: true
    },
    userId:{
        type:mongoose.Schema.ObjectId,
        ref: 'users',
        required: true
    },
    userPic:{
        type:String, 
        required:true
    },
    userPic:{
        type:String, 
        required:true
    },
    itineraryId: {type: mongoose.Schema.ObjectId, ref: 'itinerary' , required: true}
})
const Commentary  = mongoose.model('commentary',commentarySchema)

module.exports = Commentary
